{
  "name": "athletics-platform-agent",
  "version": "1.0.0",
  "description": "Athletics Platform Agent - FinishLynx Integration",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "keywords": ["athletics", "finishlynx", "timing", "results"],
  "author": "Athletics Platform",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "build": {
    "appId": "com.athletics-platform.agent",
    "productName": "Athletics Platform Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}